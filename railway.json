{ 
   "$schema": "https://railway.app/railway.schema.json", 
   "build": { 
     "builder": "NIXPACKS", 
     "buildCommand": "pip install -r ai_agent_service/requirements.txt" 
   }, 
   "deploy": { 
     "startCommand": "cd ai_agent_service && gunicorn app:app --bind 0.0.0.0:$PORT", 
     "restartPolicyType": "ON_FAILURE", 
     "restartPolicyMaxRetries": 10 
   } 
 }