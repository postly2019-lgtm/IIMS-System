# =============================================================================
# IIMS System - Production Environment Variables Template
# نظام إدارة المعلومات الاستخباراتية - قالب متغيرات بيئة الإنتاج
# =============================================================================
# Copy this file to .env and fill in your actual values
# انسخ هذا الملف إلى .env واملأ القيم الفعلية
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings - إعدادات Django الأساسية
# -----------------------------------------------------------------------------

# CRITICAL: Generate a strong secret key for production
# استخدم: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Debug Mode (MUST be False in production)
DEBUG=False

# Allowed Hosts (comma-separated, no spaces)
# Example: myapp.railway.app,www.myapp.com,myapp.com
ALLOWED_HOSTS=your-railway-domain.railway.app

# CSRF Trusted Origins (comma-separated, include https://)
# Example: https://myapp.railway.app,https://www.myapp.com
CSRF_TRUSTED_ORIGINS=https://your-railway-domain.railway.app

# -----------------------------------------------------------------------------
# Database Configuration - إعدادات قاعدة البيانات
# -----------------------------------------------------------------------------

# Railway automatically provides DATABASE_URL for PostgreSQL
# Railway يوفر DATABASE_URL تلقائياً لـ PostgreSQL
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:password@host:5432/railway

# -----------------------------------------------------------------------------
# Security Settings - إعدادات الأمان
# -----------------------------------------------------------------------------

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=same-origin
X_FRAME_OPTIONS=DENY

# -----------------------------------------------------------------------------
# Admin User Configuration - إعدادات المستخدم الإداري
# -----------------------------------------------------------------------------

# Admin credentials (used by ensure_admin command)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@iims.local
ADMIN_PASSWORD=change-this-secure-password
ADMIN_JOB_NUMBER=ADMIN-001
ADMIN_RANK=MIL
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Alternative Django superuser variables (optional)
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@iims.local
# DJANGO_SUPERUSER_PASSWORD=change-this-secure-password

# -----------------------------------------------------------------------------
# Groq AI Configuration - إعدادات الذكاء الاصطناعي Groq
# -----------------------------------------------------------------------------

# Groq API Key (Get from: https://console.groq.com/keys)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Groq Model Selection
# Options: llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it
GROQ_MODEL=llama-3.3-70b-versatile

# Groq Reasoning Effort (low, medium, high)
GROQ_REASONING_EFFORT=medium

# Groq Token Limits
GROQ_MAX_COMPLETION_TOKENS=8192
GROQ_TEMPERATURE=0.3

# Require Groq API Key (set to True to enforce)
REQUIRE_GROQ_API_KEY=False

# -----------------------------------------------------------------------------
# Railway Specific Variables - متغيرات Railway الخاصة
# -----------------------------------------------------------------------------

# Railway automatically provides these:
# RAILWAY_PUBLIC_DOMAIN - Your public domain
# RAILWAY_PRIVATE_DOMAIN - Internal domain
# PORT - Port to bind to (default: 8004)

# Port Configuration (Railway sets this automatically)
PORT=8004

# -----------------------------------------------------------------------------
# Application Settings - إعدادات التطبيق
# -----------------------------------------------------------------------------

# Language and Timezone
LANGUAGE_CODE=ar
TIME_ZONE=Asia/Riyadh

# Static Files (handled by WhiteNoise)
# STATIC_URL=/static/
# STATIC_ROOT=staticfiles

# Media Files
# MEDIA_URL=/media/
# MEDIA_ROOT=media

# -----------------------------------------------------------------------------
# Optional: Email Configuration - إعدادات البريد الإلكتروني (اختياري)
# -----------------------------------------------------------------------------

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# -----------------------------------------------------------------------------
# Optional: Logging Configuration - إعدادات السجلات (اختياري)
# -----------------------------------------------------------------------------

# LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Optional: Performance Settings - إعدادات الأداء (اختياري)
# -----------------------------------------------------------------------------

# Gunicorn Workers (default: 3)
# WEB_CONCURRENCY=3

# Database Connection Pooling
# DB_CONN_MAX_AGE=600

# =============================================================================
# DEPLOYMENT CHECKLIST - قائمة فحص النشر
# =============================================================================
# [ ] Generate and set a strong SECRET_KEY
# [ ] Set DEBUG=False
# [ ] Configure ALLOWED_HOSTS with your domain
# [ ] Configure CSRF_TRUSTED_ORIGINS with https:// prefix
# [ ] Set up PostgreSQL database (Railway provides this)
# [ ] Set ADMIN_PASSWORD to a strong password
# [ ] Configure GROQ_API_KEY if using AI features
# [ ] Review and adjust security settings
