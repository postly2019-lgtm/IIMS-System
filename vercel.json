{
  "buildCommand": "python manage.py migrate && python manage.py collectstatic --noinput",
  "installCommand": "pip install -r requirements.txt",
  "framework": "django",
  "env": {
    "DEBUG": false,
    "SECRET_KEY": "@change-this-in-production@"
  },
  "functions": {
    "config/wsgi.py": {
      "runtime": "python3.11"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}